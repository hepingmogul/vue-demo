// font
$baseWidth = 320px // iphone5 的尺寸
$fontSizeDefault = 0.85rem // iphone5 的字体大小
$fontFamily = 'Helvetica Neue', Helvetica, Arial, 'Microsoft Yahei', 'Hiragino Sans GB', 'Heiti SC', 'WenQuanYi Micro Hei', sans-serif
$fontFamilyCode = 'Courier New', Arial, sans-serif
$fontDefault = $fontSizeDefault $fontFamily
$fontCodeDefault = $fontSizeDefault $fontFamilyCode
