// layout
$margin = 0.75rem
// 约等于0.5
$marginTransverse = $margin * 0.67
$padding = 0.75rem
// 约等于0.5
$paddingTransverse = $padding * 0.67
$baseHeadHeight = 2.2rem
$baseFootHeight = 2.7rem
// ------------------------------
// weui variable
$weuiGridColumnWidth = 33.33333%
$weuiGridIconSize = 2rem
$weuiGridIconSize = 2rem
$weuiGlobalColor = $colorDefault
