.page
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  display block
  width 100%
  height 100%
  overflow hidden

.content
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  display block
  overflow auto
  -webkit-overflow-scrolling touch
  z-index 10

.headers ~ .content
  top $baseHeadHeight

.footers ~ .content
  bottom $baseFootHeight

.content-bolck
  padding $padding
  background-color $bgColor
